{
  // Setting Frotnend
  // ESLintの設定
  "eslint.options": {
    "configFile": "./frontend//.eslintrc.cjs"
  },
  "eslint.workingDirectories": [
    { "mode": "auto" },  // 自動的にプロジェクトのサブディレクトリを認識
    { "directory": "./frontend" }  // frontend フォルダを ESLint の作業ディレクトリとして指定
  ],
  // 構文チェック対象のファイルタイプ
  "eslint.validate": [
    "javascript",
    "typescript",
    "javascriptreact",
    "typescriptreact",
    "html",
    "vue"
  ],

  // Prettier設定
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": false,  // 保存処理が重くなるため、自動整形無効

  // Setting Backend
  "python.analysis.extraPaths": [
    "./backend"
  ],
  "python.defaultInterpreterPath": "path/to/your/venv/bin/python",
  "python.envFile": "${workspaceFolder}/.env"
}
